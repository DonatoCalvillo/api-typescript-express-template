{
  "name": "api-express-ts-skeleton",
  "version": "1.0.0",
  "description": "This is a template to create a rest API with DDD and hexagonal architecture.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "tsnd --inspect=0.0.0.0:9229 --respawn src",
    "build": "npm run build:clean && npm run build:tsc",
    "build:clean": "rimraf dist; exit 0",
    "build:tsc": "tsc -p tsconfig.build.json",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DonatoCalvillo/api-express-ts-skeleton"
  },
  "keywords": [
    "typescript",
    "express",
    "swagger",
    "skeleton",
    "tests"
  ],
  "author": "edgar_donato@outlook.com",
  "license": "MIT",
  "homepage": "https://github.com/DonatoCalvillo/api-express-ts-skeleton#readme",
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@types/convict": "^6.1.5",
    "@types/cors": "^2.8.15",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/supertest": "^2.0.15",
    "@types/swagger-jsdoc": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.5",
    "@types/uuid": "^9.0.6",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.1"
  },
  "dependencies": {
    "awilix": "^9.0.0",
    "convict": "^6.2.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "lint-staged": {
    "*.(js|ts)": "npm run lint:fix"
  }
}
